{
  "name": "nightreign-overlay",
  "version": "2.0.0",
  "description": "Desktop overlay & seed finder for Elden Ring: Nightreign.",
  "author": "Fahid Shah",
  "private": true,
  "type": "commonjs",
  "main": "app/main/main.js",
  "scripts": {
    "start": "electron .",
    "dist:win": "electron-builder --win portable",
    "dist:dir": "electron-builder --win zip"
  },
  "devDependencies": {
    "electron": "^38.1.2",
    "electron-builder": "^26.0.12"
  },
  "build": {
    "appId": "com.fahid.nightreign.overlay",
    "productName": "Nightreign Overlay",
    "electronLanguages": [
      "en-US"
    ],
    "compression": "normal",
    "asar": true,
    "asarUnpack": [
      "config/**",
      "public/assets/data/**"
    ],
    "files": [
      "app/**",
      "config/**",
      "public/**",
      "src/**",
      "package.json",
      "!**/*.map",
      "!**/*.test.*",
      "!**/node_modules/**/test/**",
      "!**/node_modules/**/examples/**",
      "!**/.git/**",
      "!**/.github/**",
      "!**/dist/**",
      "!**/*.md"
    ],
    "directories": {
      "output": "dist",
      "buildResources": "build"
    },
    "win": {
      "target": [
        {
          "target": "portable"
        },
        {
          "target": "zip"
        }
      ],
      "artifactName": "${productName}-${version}.${ext}"
    },
    "extraMetadata": {
      "main": "app/main/main.js"
    }
  },
  "dependencies": {
    "glob": "^9.3.5",
    "rimraf": "^4.4.1"
  }
}
